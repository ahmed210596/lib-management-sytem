@model IEnumerable<Items>
@{
    ViewData["Title"] = "Index";
}



<div class="text-end mt-3">
    <a class="btn btn-primary" asp-controller="Items" asp-action="New"><i class="bi bi-plus"></i> Add Item</a>
</div>
<div class="container mt-5">

    <h2 class="mb-4">Items List</h2>
    
    <div class="table-responsive">
        <partial name="_Notifications" />
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Created Date</th>
                    <th>Category</th>
                    <th>image</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.name</td>
                        <td>@item.price</td>
                        <td>@item.CreatedDate.ToString("yyyy-MM-dd ")</td>
                        <td>@item.Category.name</td>
                        <td><img src="@item.imagepath" style="width:47px" class="class-thumbnail" /></td>
                        <td> <a class="btn btn-danger" asp-controller="Items" asp-action="Delete" asp-route-Id="@item.id"><i class="bi bi-trash3"></i></a>&nbsp;<a class="btn btn-success" asp-controller="Items" asp-action="Edit" asp-route-Id="@item.id"><i class="bi bi-pencil"></i> </a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



