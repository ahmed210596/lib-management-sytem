@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}



<div class="text-end mt-3">
    <a class="btn btn-primary" asp-controller="Category" asp-action="New"><i class="bi bi-plus"></i> Add Category</a>
</div>
<div class="container mt-5">

    <h2 class="mb-4">Category List</h2>

    <div class="table-responsive">
        <partial name="_Notifications" />
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>IMG</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.name</td>
                        <td><img src="@item.imgSrc" style="width:47px" class="class-thumbnail" /></td>
                        
                        <td> <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id"><i class="bi bi-trash3"></i></a>&nbsp;<a class="btn btn-success" asp-controller="Category" asp-action="Edit" asp-route-Id="@item.Id"><i class="bi bi-pencil"></i> </a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>